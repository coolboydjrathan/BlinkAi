rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the top-level 'conversations' collection.
    match /conversations/{conversationId} {
      // Allow a user to LIST only their own conversations.
      // This is the rule that fixes the "Error fetching conversations" issue.
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;

      // Allow a user to GET a single one of their own conversations.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow a logged-in user to CREATE a conversation for themselves.
      // This is the rule that fixes the "New Chat" button.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow a user to UPDATE their own conversation (e.g., title, lastUpdated).
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for the 'messages' subcollection within a conversation.
    match /conversations/{conversationId}/messages/{messageId} {
      // Allow read/write to messages only if the user owns the parent conversation.
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
    }
  }
}
