rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can manage their own conversations
    match /conversations/{conversationId} {
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    
      // Users can manage messages within their own conversations
      match /messages/{messageId} {
        allow read, write, delete: if get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
      }
    }

    // Feedback can be created by any authenticated user.
    // All feedback can be read by any authenticated user (for the admin panel).
    match /feedback/{feedbackId} {
      allow read, create: if request.auth != null;
    }
  }
}
