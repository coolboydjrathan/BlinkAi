rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own user document
      allow create: if isAuthenticated() && isOwner(userId);
      // Only the owner of the user document can read or update it
      allow read, update: if isAuthenticated() && isOwner(userId);
      // Users cannot delete their accounts through the client
      allow delete: if false;
    }

    // Rules for the 'conversations' collection
    match /conversations/{conversationId} {
      // Authenticated users can read conversations they are a part of
      allow get: if isAuthenticated() && isOwner(resource.data.userId);
      // Authenticated users can query for the list of their own conversations
      allow list: if isAuthenticated() && isOwner(request.query.where.userId.in[0]);
      // Authenticated users can create new conversations
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // Only the owner can update the conversation (e.g., the title)
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      // Owners can delete their conversations
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);

      // Rules for the 'messages' subcollection
      match /messages/{messageId} {
        // Anyone who can access the parent conversation can read messages
        allow get, list: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId);
        // Any user who can access the parent conversation can add messages
        allow create: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId);
        // Only the owner of the parent conversation can update messages (e.g., for reactions)
        allow update: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId);
        // Disallow deleting individual messages
        allow delete: if false;
      }
    }
  }
}
