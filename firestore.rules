
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /conversations/{conversationId} {
      // Allow reading a single conversation if the user owns it
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow listing conversations but only when the query is for the user's own chats
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
      
      // Allow creating a conversation if the userId is set to the user's own UID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow updating a conversation (e.g., title) if the user owns it
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /conversations/{conversationId}/messages/{messageId} {
      // Allow reading/writing messages only if the user owns the parent conversation
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
    }
  }
}
